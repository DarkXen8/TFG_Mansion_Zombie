<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo de la barra -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Barra de progreso -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="8dp"/>
            </shape>
        </clip>
    </item>
</layer-list>
